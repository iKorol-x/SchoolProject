<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skd.dao.UserDao">

    <insert id="insertUser">
        insert into user(username,password,priority) values(#{username},#{password},#{priority})
    </insert>
    <update id="updateUser">
        update user set username=#{username},password=#{password},priority=#{priority} where id=${id}
    </update>
    <delete id="deleteUser">
        delete from user where id=#{id};
    </delete>
    <select id="selectUser" resultType="User">
        select id,username,password,priority from user
    </select>
</mapper>